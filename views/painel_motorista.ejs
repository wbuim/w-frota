<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <title>Painel do Motorista - W-Frota</title>
    <style>
        body { font-family: 'Segoe UI', sans-serif; background: #f0f2f5; margin: 0; padding: 15px; }
        .container { max-width: 800px; margin: 0 auto; }
        
        /* CABE√áALHO */
        .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; background: white; padding: 15px; border-radius: 10px; box-shadow: 0 2px 5px rgba(0,0,0,0.05); }
        .header h1 { margin: 0; color: #333; font-size: 18px; }
        .btn-sair { color: #dc3545; text-decoration: none; font-weight: bold; border: 1px solid #dc3545; padding: 5px 10px; border-radius: 5px; font-size: 12px; }
        
        /* CARDS */
        .card { background: white; padding: 20px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0,0,0,0.05); margin-bottom: 20px; }
        h2 { margin-top: 0; color: #444; border-bottom: 2px solid #f0f0f0; padding-bottom: 10px; font-size: 16px; font-weight: bold; text-transform: uppercase; }
        
        /* FORMUL√ÅRIOS */
        label { display: block; margin: 10px 0 3px; font-weight: 600; font-size: 12px; color: #555; }
        input, select { width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px; box-sizing: border-box; font-size: 14px; background: #fafafa; }
        input:focus, select:focus { border-color: #007bff; outline: none; background: white; }

        button { width: 100%; margin-top: 15px; padding: 12px; border: none; border-radius: 6px; cursor: pointer; font-weight: bold; color: white; font-size: 14px; transition: 0.2s; }
        
        .btn-saida { background: #007bff; }
        .btn-chegada { background: #28a745; margin-top: 5px; }
        .btn-abastecimento { background: #ffc107; color: #333; }

        /* Card de Retorno */
        .card-chegada { background: #fff3cd; border: 1px solid #ffeeba; padding: 15px; border-radius: 8px; margin-bottom: 15px; }
        
        /* BOT√ïES R√ÅPIDOS DE KM */
        .btn-km-rapido {
            background: #e9ecef; color: #333; border: 1px solid #ccc; 
            padding: 8px 5px; font-size: 12px; margin-top: 8px; width: 23%; display: inline-block; text-align: center;
        }
        .btn-km-rapido:active { background: #ccc; }

        /* TABELA */
        .veiculo-item { display: flex; justify-content: space-between; padding: 10px; border-bottom: 1px solid #eee; align-items: center; }
        .status-disp { color: #28a745; font-weight: bold; font-size: 12px; }
        .status-uso { color: #dc3545; font-weight: bold; font-size: 12px; }
    </style>
</head>
<body>

<div class="container">
    <div class="header">
        <div>
            <h1>Ol√°, <%= user.nome %></h1>
            <small style="color:#777;">Motorista</small>
        </div>
        <a href="/logout" class="btn-sair">Sair</a>
    </div>

    <div class="card">
        <h2>üì§ Nova Sa√≠da</h2>
        <form action="/registrar_saida" method="POST">
            <label>Escolha o Ve√≠culo</label>
            <select name="veiculo_id" required>
                <option value="">-- Selecione --</option>
                <% veiculos.forEach(v => { %>
                    <% if (v.status === 'Dispon√≠vel') { %>
                        <option value="<%= v.id %>"><%= v.modelo %> (<%= v.placa %>)</option>
                    <% } %>
                <% }) %>
            </select>
            
            <input type="hidden" name="motorista" value="<%= user.nome %>">
            
            <label>Destino / Motivo</label>
            <input type="text" name="destino" placeholder="Para onde vai?" required>
            
            <button type="submit" class="btn-saida">Confirmar Sa√≠da</button>
        </form>
    </div>

    <div class="card">
        <h2>üì• Minhas Viagens (Em Aberto)</h2>
        <% if(em_transito.length === 0) { %>
            <p style="color:#999; text-align:center;">Voc√™ n√£o tem viagens em aberto.</p>
        <% } %>

        <% em_transito.forEach(mov => { %>
            <div class="card-chegada">
                <strong style="font-size:16px;">üöó <%= mov.veiculo.modelo %></strong><br>
                <span style="color: #666; font-size: 13px;">Placa: <%= mov.veiculo.placa %></span><br>
                <small>Sa√≠da: <%= mov.km_saida %> km</small>

                <form action="/registrar_chegada" method="POST" style="margin-top: 10px;">
                    <input type="hidden" name="mov_id" value="<%= mov.id %>">
                    
                    <label>KM de Chegada</label>
                    <div style="display:flex; gap:5px;">
                        <input type="number" id="km_input_<%= mov.id %>" name="km_chegada" value="<%= mov.km_saida %>" required min="<%= mov.km_saida %>">
                    </div>

                    <div style="display:flex; justify-content:space-between;">
                        <button type="button" class="btn-km-rapido" onclick="somarKm('<%= mov.id %>', 1)">+1</button>
                        <button type="button" class="btn-km-rapido" onclick="somarKm('<%= mov.id %>', 5)">+5</button>
                        <button type="button" class="btn-km-rapido" onclick="somarKm('<%= mov.id %>', 10)">+10</button>
                        <button type="button" class="btn-km-rapido" onclick="somarKm('<%= mov.id %>', 50)">+50</button>
                    </div>

                    <input type="text" name="observacao" placeholder="Alguma observa√ß√£o?" style="margin-top:10px;">
                    
                    <button type="submit" class="btn-chegada">Registrar Retorno</button>
                </form>
            </div>
        <% }) %>
    </div>

    <div class="card" style="border-top: 3px solid #ffc107;">
        <h2>‚õΩ Abastecimento</h2>
        <form action="/registrar_abastecimento" method="POST">
            <label>Ve√≠culo</label>
            <select name="veiculo_id" required>
                <% veiculos.forEach(v => { %>
                    <option value="<%= v.id %>"><%= v.modelo %> (<%= v.placa %>)</option>
                <% }) %>
            </select>
            
            <label>Valor Total (R$)</label>
            <input type="number" step="0.01" name="valor_total" placeholder="0.00" required>
            
            <label>Litros</label>
            <input type="number" step="0.01" name="litros" placeholder="0.00" required>

            <label>KM no Painel</label>
            <input type="number" name="km_momento" required>

            <label>Tipo</label>
            <select name="tipo_combustivel">
                <option>Gasolina</option>
                <option>Etanol</option>
                <option>Diesel</option>
            </select>

            <label>Posto</label>
            <input type="text" name="posto" placeholder="Nome do Posto">

            <button type="submit" class="btn-abastecimento">Salvar Abastecimento</button>
        </form>
    </div>

    <div class="card">
        <h2>Lista da Frota</h2>
        <% veiculos.forEach(v => { %>
            <div class="veiculo-item">
                <div>
                    <strong><%= v.modelo %></strong> <small>(<%= v.placa %>)</small>
                </div>
                <div>
                    <% if(v.status === 'Dispon√≠vel') { %> 
                        <span class="status-disp">Livre</span>
                    <% } else if(v.status === 'Manuten√ß√£o') { %> 
                        <span class="status-manu" style="color:#856404; font-weight:bold; font-size:12px;">Oficina</span>
                    <% } else { %> 
                        <span class="status-uso">Em Uso</span> 
                    <% } %>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<script>
    // Fun√ß√£o para somar KM nos bot√µes
    function somarKm(id, valor) {
        const input = document.getElementById('km_input_' + id);
        // Garante que o valor base seja um n√∫mero (se estiver vazio, usa 0)
        let atual = parseInt(input.value) || 0;
        input.value = atual + valor;
    }
</script>

</body>
</html>