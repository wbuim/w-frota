<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Departamentos e Equipe</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body { font-family: 'Segoe UI', sans-serif; background: #f4f6f9; padding: 20px; color: #333; }
        .container { max-width: 1000px; margin: 0 auto; }
        
        .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; }
        h2 { margin: 0; color: #2c3e50; }
        
        .btn-voltar { text-decoration: none; color: #555; background: white; padding: 10px 20px; border-radius: 5px; font-weight: bold; border: 1px solid #ddd; }
        .btn-voltar:hover { background: #e9ecef; }

        /* GRIDS */
        .grid-acoes { display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 30px; }
        .box-cadastro { background: white; padding: 20px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0,0,0,0.05); height: fit-content; }
        
        .box-depto { border-top: 5px solid #6f42c1; }
        .box-user { border-top: 5px solid #28a745; }

        .titulo-card { font-weight: bold; font-size: 16px; margin-bottom: 15px; display: block; color: #444; }

        /* FORMUL√ÅRIOS */
        label { display: block; margin-bottom: 5px; font-size: 12px; font-weight: bold; color: #666; }
        input, select { width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px; box-sizing: border-box; margin-bottom: 10px; }
        
        .btn-salvar { color: white; border: none; padding: 10px; width: 100%; border-radius: 5px; cursor: pointer; font-weight: bold; margin-top: 5px; }
        .btn-verde { background: #28a745; } .btn-verde:hover { background: #218838; }
        .btn-roxo { background: #6f42c1; } .btn-roxo:hover { background: #5a32a3; }

        /* LISTA DE DEPARTAMENTOS */
        .lista-deptos { margin-top: 20px; border-top: 1px solid #eee; pt: 10px; }
        .item-depto { display: flex; justify-content: space-between; align-items: center; padding: 8px 0; border-bottom: 1px solid #f9f9f9; font-size: 14px; }
        .actions-depto button, .actions-depto a { cursor: pointer; margin-left: 5px; border: none; background: none; font-size: 16px; text-decoration: none; }
        .btn-edit-dep { color: #ffc107; }
        .btn-del-dep { color: #dc3545; }

        /* TABELA DE USU√ÅRIOS */
        .card-tabela { background: white; border-radius: 10px; box-shadow: 0 4px 10px rgba(0,0,0,0.05); overflow: hidden; margin-top: 20px; }
        table { width: 100%; border-collapse: collapse; }
        th { background: #f8f9fa; text-align: left; padding: 15px; color: #555; font-size: 13px; text-transform: uppercase; border-bottom: 2px solid #eee; }
        td { padding: 15px; border-bottom: 1px solid #eee; font-size: 14px; }
        tr:last-child td { border-bottom: none; }

        .badge { padding: 4px 10px; border-radius: 20px; font-size: 11px; font-weight: 700; display: inline-block; }
        .badge-motorista { background: #e2e6ea; color: #495057; }
        .badge-sec { background: #cff4fc; color: #055160; }
        .badge-geral { background: #cfe2ff; color: #084298; }
        
        .btn-acao { cursor: pointer; border: none; background: none; font-size: 16px; text-decoration: none; margin-right: 5px; }
        .btn-editar { color: #007bff; }
        .btn-excluir { color: #dc3545; }

        @media (max-width: 768px) { .grid-acoes { grid-template-columns: 1fr; } }
    </style>
</head>
<body>

<div class="container">
    <div class="header">
        <h2>üè¢ Gest√£o Corporativa</h2>
        <a href="/" class="btn-voltar">‚¨Ö Voltar</a>
    </div>

    <div class="grid-acoes">
        
        <% if (usuarioLogado.nivel === 99) { %>
            <div class="box-cadastro box-depto">
                <span class="titulo-card">üè¢ Departamentos / Unidades</span>
                
                <form action="/novo_departamento" method="POST">
                    <div style="display:flex; gap:5px;">
                        <input type="text" name="nome" placeholder="Nome do novo departamento..." required style="margin:0;">
                        <button type="submit" class="btn-salvar btn-roxo" style="width: auto; margin:0;">+</button>
                    </div>
                </form>

                <div class="lista-deptos" style="max-height: 250px; overflow-y: auto;">
                    <small style="color:#999; display:block; margin-bottom:5px;">Departamentos Ativos:</small>
                    <% departamentos.forEach(dep => { %>
                        <div class="item-depto">
                            <span><%= dep.nome %></span>
                            <div class="actions-depto">
                                <button class="btn-edit-dep" onclick="editarDepartamento('<%= dep.id %>', '<%= dep.nome %>')" title="Editar Nome">‚úèÔ∏è</button>
                                <% if(dep.id !== 1) { %>
                                    <a href="/deletar_departamento/<%= dep.id %>" class="btn-del-dep" onclick="return confirm('Tem certeza?')" title="Excluir">üóëÔ∏è</a>
                                <% } %>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        <% } %>

        <div class="box-cadastro box-user" style="<%= usuarioLogado.nivel !== 99 ? 'grid-column: span 2;' : '' %>">
            <span class="titulo-card">üë§ Novo Colaborador</span>
            <form action="/salvar_usuario" method="POST">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <div><input type="text" name="nome" placeholder="Nome Completo" required></div>
                    <div><input type="text" name="login" placeholder="Login de Acesso" required></div>
                </div>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <div><input type="password" name="senha" placeholder="Senha" required></div>
                    <div>
                        <select name="nivel_acesso" required>
                            <option value="0">Motorista (Acesso B√°sico)</option>
                            <% if (usuarioLogado.nivel === 99) { %>
                                <option value="1">Gestor do Departamento</option>
                                <option value="99" style="color:red; font-weight:bold;">Diretor Geral (Admin)</option>
                            <% } %>
                        </select>
                    </div>
                </div>
                <% if (usuarioLogado.nivel === 99 && departamentos) { %>
                    <label style="color: #6f42c1; margin-top: 5px;">Vincular ao Departamento:</label>
                    <select name="departamento_id" required style="border-color: #6f42c1;">
                        <% departamentos.forEach(dep => { %>
                            <option value="<%= dep.id %>"><%= dep.nome %></option>
                        <% }) %>
                    </select>
                <% } %>
                <button type="submit" class="btn-salvar btn-verde">Cadastrar Colaborador</button>
            </form>
        </div>
    </div>

    <div class="card-tabela">
        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Login</th>
                    <th>Fun√ß√£o</th>
                    <th>Departamento</th>
                    <th>A√ß√µes</th>
                </tr>
            </thead>
            <tbody>
                <% usuarios.forEach(u => { %>
                    <tr>
                        <td><strong><%= u.nome %></strong></td>
                        <td><%= u.login %></td>
                        <td>
                            <% if(u.nivel === 99) { %> <span class="badge badge-geral">üëë Diretor</span>
                            <% } else if (u.nivel === 1) { %> <span class="badge badge-sec">üíº Gestor</span>
                            <% } else { %> <span class="badge badge-motorista">üöõ Motorista</span> <% } %>
                        </td>
                        <td><%= u.departamento ? u.departamento.nome : '-' %></td>
                        <td>
                            <% if(usuarioLogado.nivel === 99 || (usuarioLogado.nivel === 1 && u.nivel === 0)) { %>
                                <button class="btn-acao btn-editar" 
                                    onclick="editarUsuario('<%= u.id %>', '<%= u.nome %>', '<%= u.login %>', '<%= u.nivel %>', '<%= u.departamentoId %>')" 
                                    title="Editar Dados e Senha">
                                    ‚úèÔ∏è
                                </button>
                            <% } %>

                            <% if(u.id !== usuarioLogado.id) { %>
                                <a href="/deletar_usuario/<%= u.id %>" class="btn-acao btn-excluir" onclick="return confirm('Remover este usu√°rio?')" title="Excluir">üóëÔ∏è</a>
                            <% } else { %> <small style="color:#ccc;">(Voc√™)</small> <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<script>
    // Converte a lista do EJS para um objeto JS para usarmos no select do SweetAlert
    const listaDepartamentos = <%- JSON.stringify(departamentos || []) %>;
</script>

<script>
    // EDITAR DEPARTAMENTO
    async function editarDepartamento(id, nomeAtual) {
        const { value: novoNome } = await Swal.fire({
            title: 'Renomear Departamento',
            input: 'text',
            inputLabel: 'Novo nome para: ' + nomeAtual,
            inputValue: nomeAtual,
            showCancelButton: true,
            confirmButtonText: 'Salvar'
        });

        if (novoNome) {
            postarFormulario('/editar_departamento', { id, nome: novoNome });
        }
    }

    // EDITAR USU√ÅRIO (COMPLEXO)
    async function editarUsuario(id, nome, login, nivel, deptId) {
        // Monta as op√ß√µes de departamento
        let opcoesDepto = '';
        listaDepartamentos.forEach(d => {
            const selected = (d.id == deptId) ? 'selected' : '';
            opcoesDepto += `<option value="${d.id}" ${selected}>${d.nome}</option>`;
        });

        // Monta o HTML do Formul√°rio
        const htmlForm = `
            <div style="text-align:left">
                <label>Nome Completo</label>
                <input id="swal-nome" class="swal2-input" value="${nome}" style="margin-top:0;">
                
                <label style="margin-top:10px;">Login</label>
                <input id="swal-login" class="swal2-input" value="${login}" style="margin-top:0;">

                <label style="margin-top:10px;">Nova Senha (Opcional)</label>
                <input id="swal-senha" type="password" class="swal2-input" placeholder="Deixe vazio para manter a atual" style="margin-top:0;">

                <div style="display:grid; grid-template-columns: 1fr 1fr; gap:10px; margin-top:10px;">
                    <div>
                        <label>N√≠vel</label>
                        <select id="swal-nivel" class="swal2-input" style="margin-top:0; height: 45px; padding: 0 10px;">
                            <option value="0" ${nivel == 0 ? 'selected' : ''}>Motorista</option>
                            <option value="1" ${nivel == 1 ? 'selected' : ''}>Gestor</option>
                            <option value="99" ${nivel == 99 ? 'selected' : ''}>Diretor (Admin)</option>
                        </select>
                    </div>
                    <div>
                        <label>Departamento</label>
                        <select id="swal-depto" class="swal2-input" style="margin-top:0; height: 45px; padding: 0 10px;">
                            ${opcoesDepto}
                        </select>
                    </div>
                </div>
            </div>
        `;

        const { value: formValues } = await Swal.fire({
            title: 'Editar Colaborador',
            html: htmlForm,
            focusConfirm: false,
            showCancelButton: true,
            confirmButtonText: 'Salvar Altera√ß√µes',
            preConfirm: () => {
                return {
                    id: id,
                    nome: document.getElementById('swal-nome').value,
                    login: document.getElementById('swal-login').value,
                    senha: document.getElementById('swal-senha').value,
                    nivel_acesso: document.getElementById('swal-nivel').value,
                    departamento_id: document.getElementById('swal-depto').value
                }
            }
        });

        if (formValues) {
            postarFormulario('/editar_usuario', formValues);
        }
    }

    // Fun√ß√£o gen√©rica para enviar POST sem recarregar via AJAX, mas via form submit padr√£o
    function postarFormulario(path, params) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = path;

        for (const key in params) {
            if (params.hasOwnProperty(key)) {
                const hiddenField = document.createElement('input');
                hiddenField.type = 'hidden';
                hiddenField.name = key;
                hiddenField.value = params[key];
                form.appendChild(hiddenField);
            }
        }
        document.body.appendChild(form);
        form.submit();
    }
</script>

</body>
</html>