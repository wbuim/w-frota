<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Departamentos e Equipe</title>
    <style>
        body { font-family: 'Segoe UI', sans-serif; background: #f4f6f9; padding: 20px; color: #333; }
        .container { max-width: 1000px; margin: 0 auto; }
        
        .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; }
        h2 { margin: 0; color: #2c3e50; }
        
        .btn-voltar { text-decoration: none; color: #555; background: white; padding: 10px 20px; border-radius: 5px; font-weight: bold; border: 1px solid #ddd; }
        .btn-voltar:hover { background: #e9ecef; }

        /* CARDS DE A√á√ÉO */
        .grid-acoes { display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 30px; }
        .box-cadastro { background: white; padding: 20px; border-radius: 10px; box-shadow: 0 4px 10px rgba(0,0,0,0.05); }
        .box-depto { border-top: 5px solid #6f42c1; }
        .box-user { border-top: 5px solid #28a745; }

        .titulo-card { font-weight: bold; font-size: 16px; margin-bottom: 15px; display: block; color: #444; }

        /* FORMUL√ÅRIOS */
        label { display: block; margin-bottom: 5px; font-size: 12px; font-weight: bold; color: #666; }
        input, select { width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 5px; box-sizing: border-box; margin-bottom: 10px; }
        
        .btn-salvar { color: white; border: none; padding: 10px; width: 100%; border-radius: 5px; cursor: pointer; font-weight: bold; margin-top: 10px; }
        .btn-verde { background: #28a745; } .btn-verde:hover { background: #218838; }
        .btn-roxo { background: #6f42c1; } .btn-roxo:hover { background: #5a32a3; }

        /* TABELA */
        .card-tabela { background: white; border-radius: 10px; box-shadow: 0 4px 10px rgba(0,0,0,0.05); overflow: hidden; margin-top: 20px; }
        table { width: 100%; border-collapse: collapse; }
        th { background: #f8f9fa; text-align: left; padding: 15px; color: #555; font-size: 13px; text-transform: uppercase; border-bottom: 2px solid #eee; }
        td { padding: 15px; border-bottom: 1px solid #eee; font-size: 14px; }
        tr:last-child td { border-bottom: none; }

        .badge { padding: 4px 10px; border-radius: 20px; font-size: 11px; font-weight: 700; display: inline-block; }
        .badge-motorista { background: #e2e6ea; color: #495057; }
        .badge-sec { background: #cff4fc; color: #055160; }
        .badge-geral { background: #cfe2ff; color: #084298; }
        
        .btn-excluir { color: #dc3545; text-decoration: none; font-weight: bold; font-size: 16px; }

        @media (max-width: 768px) { .grid-acoes { grid-template-columns: 1fr; } }
    </style>
</head>
<body>

<div class="container">
    <div class="header">
        <h2>üè¢ Gest√£o Corporativa</h2>
        <a href="/" class="btn-voltar">‚¨Ö Voltar</a>
    </div>

    <div class="grid-acoes">
        <% if (usuarioLogado.nivel === 99) { %>
            <div class="box-cadastro box-depto">
                <span class="titulo-card">üè¢ Novo Departamento</span>
                <form action="/novo_departamento" method="POST">
                    <label>Nome do Departamento / Unidade</label>
                    <input type="text" name="nome" placeholder="Ex: Log√≠stica, Vendas, Matriz..." required>
                    <button type="submit" class="btn-salvar btn-roxo">Criar Departamento</button>
                </form>
            </div>
        <% } %>

        <div class="box-cadastro box-user" style="<%= usuarioLogado.nivel !== 99 ? 'grid-column: span 2;' : '' %>">
            <span class="titulo-card">üë§ Novo Colaborador</span>
            <form action="/salvar_usuario" method="POST">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <div><input type="text" name="nome" placeholder="Nome Completo" required></div>
                    <div><input type="text" name="login" placeholder="Login de Acesso" required></div>
                </div>
                
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                    <div><input type="password" name="senha" placeholder="Senha" required></div>
                    <div>
                        <select name="nivel_acesso" required>
                            <option value="0">Motorista (Acesso B√°sico)</option>
                            <% if (usuarioLogado.nivel === 99) { %>
                                <option value="1">Gestor do Departamento</option>
                                <option value="99" style="color:red; font-weight:bold;">Diretor Geral (Admin)</option>
                            <% } %>
                        </select>
                    </div>
                </div>

                <% if (usuarioLogado.nivel === 99 && departamentos) { %>
                    <label style="color: #6f42c1; margin-top: 5px;">Vincular ao Departamento:</label>
                    <select name="departamento_id" required style="border-color: #6f42c1;">
                        <% departamentos.forEach(dep => { %>
                            <option value="<%= dep.id %>"><%= dep.nome %></option>
                        <% }) %>
                    </select>
                <% } %>
                
                <button type="submit" class="btn-salvar btn-verde">Cadastrar Colaborador</button>
            </form>
        </div>
    </div>

    <div class="card-tabela">
        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Login</th>
                    <th>Fun√ß√£o</th>
                    <th>Departamento</th>
                    <th>A√ß√µes</th>
                </tr>
            </thead>
            <tbody>
                <% usuarios.forEach(u => { %>
                    <tr>
                        <td><strong><%= u.nome %></strong></td>
                        <td><%= u.login %></td>
                        <td>
                            <% if(u.nivel === 99) { %> <span class="badge badge-geral">üëë Diretor</span>
                            <% } else if (u.nivel === 1) { %> <span class="badge badge-sec">üíº Gestor</span>
                            <% } else { %> <span class="badge badge-motorista">üöõ Motorista</span> <% } %>
                        </td>
                        <td><%= u.departamento ? u.departamento.nome : '-' %></td>
                        <td>
                            <% if(u.id !== usuarioLogado.id) { %>
                                <a href="/deletar_usuario/<%= u.id %>" class="btn-excluir" onclick="return confirm('Remover este usu√°rio?')" title="Excluir">üóëÔ∏è</a>
                            <% } else { %> <small style="color:#ccc;">(Voc√™)</small> <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

</body>
</html>